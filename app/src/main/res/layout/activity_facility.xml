<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_facility"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.sun.umstouristsapp.Facility">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:minHeight="?attr/actionBarSize"
        android:elevation="4dp"
        android:layout_marginBottom="100dp"
        android:background="@color/colorHeader">

        <ImageView
            android:id="@+id/backImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:tint="@android:color/white"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:id="@+id/action_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Facility"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_below="@id/main_toolbar"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@id/center_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/dining_logo"
            android:layout_margin="12dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toLeftOf="@id/center_view"
            android:drawableTop="@drawable/ic_local_dining_black_24dp"
            android:gravity="center"
            android:background="@drawable/button_secondary"
            android:text="Cafe"/>

        <Button
            android:id="@+id/restroom_logo"
            android:layout_margin="12dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/center_view"
            android:drawableTop="@drawable/ic_wc_black_24dp"
            android:gravity="center"
            android:background="@drawable/button_secondary"
            android:text="Rest Room"/>

        <Button
            android:id="@+id/bank_logo"
            android:layout_margin="12dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/dining_logo"
            android:layout_toLeftOf="@id/center_view"
            android:drawableTop="@drawable/ic_local_atm_black_24dp"
            android:gravity="center"
            android:background="@drawable/button_secondary"
            android:text="ATM"/>

        <Button
            android:id="@+id/bus_stop_logo"
            android:layout_margin="12dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/center_view"
            android:layout_below="@id/restroom_logo"
            android:drawableTop="@drawable/ic_directions_bus_black_24dp"
            android:gravity="center"
            android:background="@drawable/button_secondary"
            android:text="Bus Stop"/>

    </RelativeLayout>



</RelativeLayout>
