<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_attraction_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.sun.umstouristsapp.Attraction_chancellor_hall">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:minHeight="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="@color/colorHeader">

        <ImageView
            android:id="@+id/backImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:tint="@android:color/white"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:id="@+id/attraction_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Clock Tower"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_below="@id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="7"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/attraction_detail_imageview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ums_clock_menarajam_resize"/>

        <TextView
            android:id="@+id/details_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:maxLines = "99"
            android:scrollbars = "vertical"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="6dp"
            android:textSize="18dp"
            android:textColor="@color/colorBlack"
            android:text="@string/attraction_clock_tower"/>


        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:scaleX=".6"
            android:scaleY=".6"
            android:max="5"
            android:rating="5"
            android:stepSize="1"
            android:isIndicator="true"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/main_gallery"
                android:layout_margin="12dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_insert_photo_black_24dp"
                android:paddingLeft="24dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_secondary"
                android:textAllCaps="false"
                android:text="Gallery"/>


            <Button
                android:id="@+id/main_map"
                android:layout_margin="12dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_pin_drop_black_24dp"
                android:paddingLeft="24dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_secondary"
                android:textAllCaps="false"
                android:text="Map"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
