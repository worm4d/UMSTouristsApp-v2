<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_packages_sunset"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sun.umstouristsapp.Packages_sunset">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:minHeight="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="#212121">

        <ImageView
            android:id="@+id/backImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:tint="@android:color/white"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:id="@+id/packages_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="sunset tour"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/packages_detail_imageview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/main_toolbar"
        android:adjustViewBounds="true"
        android:contentDescription="SampleImage"
        android:scaleType="centerCrop"
        android:src="@drawable/package_sunset"/>


    <View
        android:id="@+id/center_view"
        android:layout_width="0dp"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/main_venues"
        android:layout_margin="12dp"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/center_view"
        android:drawableLeft="@drawable/ic_pin_drop_black_24dp"
        android:paddingLeft="24dp"
        android:gravity="center"
        android:text="Venues"/>


    <Button
        android:id="@+id/main_charge"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/center_view"
        android:drawableLeft="@drawable/ic_local_atm_black_24dp"
        android:paddingLeft="24dp"
        android:gravity="center"
        android:text="Charge"/>

    <TextView
        android:id="@+id/details_txt"
        android:layout_below="@id/packages_detail_imageview"
        android:layout_above="@id/main_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxLines = "99"
        android:scrollbars = "vertical"
        android:gravity="center"
        android:textSize="18dp"
        android:text="Mesmerizing sunset panorama and serenity at UMS to reflect on the grace of life."/>

</RelativeLayout>
